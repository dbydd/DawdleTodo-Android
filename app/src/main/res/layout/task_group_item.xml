<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal"
    android:background="@color/material_dynamic_primary60">

    <LinearLayout
        android:id="@+id/entire_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/actually_button_to_lower"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/task_logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/todos" />

            <TextView
                android:id="@+id/task_to_be_done"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="task container name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18pt"
            android:orientation="horizontal"

            android:textAlignment="center">

            <TextView
                android:id="@+id/task_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="@string/placeholder"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <Button
                android:id="@+id/complete_current_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/complete_task"
                />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
